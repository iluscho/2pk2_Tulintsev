<Window x:Class="pz25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="окошко впф" Height="250" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Первое число:" Margin="10"/>
        <TextBox x:Name="FirstNumberTextBox" Margin="10" Grid.Row="1"/>
        <Label Content="Второе число:" Margin="10" Grid.Row="2"/>
        <TextBox x:Name="SecondNumberTextBox" Margin="10" Grid.Row="3"/>
        <Button Content="Нажми меня"  Margin="10" Grid.Row="5" Click="Button_Click"/>
    </Grid>
</Window>